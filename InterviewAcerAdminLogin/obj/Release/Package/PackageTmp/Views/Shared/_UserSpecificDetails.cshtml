            //    url: 'Users/GetAllUserDetails/',
            //    type: 'GET',
            //    contentType: 'application/html',
            //    success: function (content) {
            //        $('#divPartialViewContainer').html(content);
            //    },
            //    error: function (e) { }
            //});
        });
      
    });
  
</script>
   
 

